export SVN_EDITOR='${EDITOR}'
alias ssq='svn status -q'
alias sup='svn up' # trust me 3 chars makes a different
alias sst='svn st' # local file changes
alias sstu='svn st -u' # remote repository changes
alias svn_new='svn status | grep "^\?" | awk "{print \$2}"'
alias svnclear='rm -rf `find . -type d -name .svn`' # removes all .svn folders from directory recursively
#alias svnaddall='svn status | grep "^\?" | awk "{print \$2}" | xargs svn add' # adds all unadded files
alias svn_log='svn log --limit 10'
alias svstatusremote='svn status --show-updates' # Show status here and on the server


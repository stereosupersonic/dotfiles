#erzeugt ein digramm Ÿber alle Models in der Rails-App
#muss im Root-Verzeichnis der Rails-App gestartet werden.
modelstopdf() {
    if [ -f models.svg ]
        then
        rm -f models.svg
    fi
    if [ -f models.pdf ]
        then
        rm -f models.pdf
    fi
    # railroad -M | dot -Tsvg > models.svg
    railroad -a -i -M | dot -Tsvg > models.svg
    inkscape -z models.svg --export-pdf=models.pdf
    rm -f models.svg

    if [ -f models.pdf ]
        then
        echo "models.pdf wurde erstell!"
        #gleich šffnen
        open models.pdf
    else
        echo "Fehler!!!"
    fi

}


function railsapp {
    if [ $# -eq 0 ]; then
        echo "$0 : You must supply at least one argument for the application name."
        exit 1
    fi

    if [ $# -eq 1 ]; then
        rails $1 -m  ~/entwicklung/basisvorlagen/rails_template.txt
        # rails $1 -m http://gist.github.com/raw/133842/fdc00b40dfabc83aa71dad2a97727a89ca00c575/my_template.rb
    fi

    if [ $# -eq 2 ]; then
        rails $1 -m $2
        #rails $1 -m http://github.com/delynn/rails-templates/raw/master/$2.rb
    fi 

}

function find_in_rails {
    find .  -path './spec' -prune -o -path '*.svn' -prune -o  -type f -name "*.rb" -exec egrep -qi "$1" {} \; -print | xargs mate
}

function ruby_grep {
    find . -type f -name "*.rb"  -exec egrep -qi "$1" {} \; -print | xargs mate
}

function find_in_specs {
    find . -name "spec" -type d -print | xargs find -name "*.rb" | xargs egrep -li "$1" | xargs mate
}

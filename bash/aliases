function sc {
    if [ -e script/rails ]; then
        script/rails console $@
    else
        script/console $@
    fi
}
function sg {
    if [ -e script/rails ]; then
        script/rails generate $@
    else
        script/generate $@
    fi
}

#startet den den server
ss () {
    if [ -f ./vendor/plugins/konvenit_plugin_trunk/start_server.rb ] 
        then
        ./vendor/plugins/konvenit_plugin_trunk/start_server.rb
    else
        if [ -e script/rails ]; then
            script/rails server $@
        else
            script/server $@
        fi
    fi
}


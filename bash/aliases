alias rld="source $HOME/.bashrc"
alias bash_reload="cd $DOTFILE && rake update && rld"
alias dot="cd $DOTFILE"
alias dev="cd $HOME/entwicklung/"

alias alias?='alias| grep -i $1'
alias platform="echo $PLATFORM"

alias root_shell='sudo -s'

alias more='less'
alias today='date +"%A, %d. %B, %Y"'
alias yest='date -v-1d +"%A %d. %B, %Y"'
alias recent='ls -lAt | head -n 20'

alias g='grep -i'  #case insensitive grep
alias f='find . -iname'
function ff () { find . -name "*$1*" -print; }

alias k9="sudo killall -9"
function killnamed () {
ps ax | grep $1 |  grep -v grep | awk '{print $2}' | xargs kill -9
}

alias v=vim


function zipr() {
    zip -r $1.zip $1
}

alias untar="tar -zxvf"
extract () {
    if [ -f $1 ] ; then
        case $1 in
            *.tar.bz2)   tar xvjf $1    ;;
            *.tar.gz)    tar xvzf $1    ;;
            *.bz2)       bunzip2 $1     ;;
            *.rar)       unrar x $1       ;;
            *.gz)        gunzip $1      ;;
            *.tar)       tar xvf $1     ;;
            *.tbz2)      tar xvjf $1    ;;
            *.tgz)       tar xvzf $1    ;;
            *.zip)       unzip $1       ;;
            *.Z)         uncompress $1  ;;
            *.7z)        7z x $1        ;;
            *)           echo "don't know how to extract '$1'..." ;;
        esac
    else
        echo "'$1' is not a valid file!"
    fi
}


#######################################################################
#Apache
#######################################################################

if [ "$OS" = "darwin" ] ; then
  alias apache_restart='sudo apachectl graceful'
  alias apache_info='sudo apachectl -V'
  alias apache_errorlog=' sudo tail -f /var/log/apache2/error_log '
  alias apache_accesslog='sudo tail -f /var/log/apache2/access_log'
fi

if [ "$OS" = "linux" ] ; then
  alias apache_restart='sudo apache2ctl graceful'
  alias apache_info='sudo apache2ctl -V'
  alias apache_errorlog='sudo tail -f /var/log/apache2/error.log'
  alias apache_accesslog='sudo tail -f /var/log/apache2/access.log'
fi

#######################################################################
#bookmarking
#######################################################################

#bookm foo
#...
#cd foo
#anzeige der bookmarks
#show foo="/Users/joebob/foo"
if [ ! -f $HOME/.dirs ]; then  # if doesn't exist, create it
    touch $HOME/.dirs
fi

alias show='cat $HOME/.dirs'
bookm (){
    command sed "/!$/d" $HOME/.dirs > $HOME/.dirs1; \mv $HOME/.dirs1 $HOME/.dirs; echo "$@"=\"`pwd`\" >> $HOME/.dirs; source $HOME/.dirs ;
}
source $HOME/.dirs  # Initialization for the above 'save' facility: source the .sdirs file
shopt -s cdable_vars # set the bash option so that no '$' is required when using the above facility


#
# Identify OS and Machine -----------------------------------------
export OS=`uname -s | sed -e 's/ *//g;y/ABCDEFGHIJKLMNOPQRSTUVWXYZ/abcdefghijklmnopqrstuvwxyz/'`
export OSVERSION=`uname -r`; OSVERSION=`expr "$OSVERSION" : '[^0-9]*\([0-9]*\.[0-9]*\)'`
export MACHINE=`uname -m | sed -e 's/ *//g;y/ABCDEFGHIJKLMNOPQRSTUVWXYZ/abcdefghijklmnopqrstuvwxyz/'`
export PLATFORM="$MACHINE-$OS-$OSVERSION"

# Note, default OS is assumed to be OSX
export RSPEC=true
export AUTOFEATURE=true


if [ -d ~/bin ]; then
 PATH="$PATH:~/bin"
fi

if [ -d ~/bin/scripts ]; then
 PATH="$PATH:~/bin/scripts"
fi

if [ -d ~/bin/dotfiles/bash/bin ]; then
 PATH="$PATH:~/bin/dotfiles/bash/bin"
fi
#shared scripts
if [ -d ~/Dropbox/bash/bin ]; then
 PATH="$PATH:~/Dropbox/bash/bin"
fi


if [ "$OS" = "darwin" ] ; then
#mysql
PATH="$PATH:/usr/local/mysql/bin/"
#  #MacPorts
#  PATH="/opt/local/bin:/opt/local/sbin:$PATH"
#  # Setting PATH for Subversion 1.5.1 binaries
#  # The orginal version is saved in .bash_profile.svnsave
#  
#  SVN_BIN="/opt/subversion/bin"
#  #ANNOTATE_BIN="/Library/Ruby/Gems/1.8/gems/annotate-2.0.2/bin"
#  GEM_HOME="/opt/local/lib/ruby/gems/1.8/gems"
#  
#  PATH="$SVN_BIN:$PATH"
 alias mvim=/Applications/mvim
 export EDITOR="mate"
fi
PATH="/usr/local/sbin:$PATH" 
PATH="/usr/local/bin:$PATH" 
export PATH


export PAGER=less
export LESS="-M -I -N"

#########
#History#
#########
export HISTFILE=~/.bash_history
export HISTFILESIZE=20000
export HISTSIZE=10000
# Combine multiline commands into one in historty
shopt -s histappend
export HISTIGNORE='&:ls:lr:ll:[bf]g:pwd:exit:..:...:lla"'
export HISTCONTROL='ignorespace:ignoredups:ignoreboth'
export HISTTIMEFORMAT="%F %T " #anzeige der Zeit in der histry
# Color grep
#export GREP_OPTIONS="--color=auto"
#export GREP_COLOR="4;33"
export CLICOLOR=auto

 
if [ "$OS" = "darwin" ] ; then
  export LSCOLORS=FxFxCxDxBxebedabagacad #siehe http://blog.sensibleopensource.com/changing_colors_in_the_osx_terminal_1.htm
fi

if [ "$OS" = "linux" ] ; then
    #anleitung fÃ¼r ubuntu colors hier #=> http://wiki.ubuntuusers.de/dircolors
    #dircolors -p > ~/.dircolors 
    #eval `dircolors -b ~/.dircolors`
   export EDITOR="vi"
fi    

#svn svnserve: warning: cannot set LC_CTYPE locale
export LC_ALL=C
[user]
  name = Michael Deimel
  email = michael@deimel.de
 
[github]
  user = $GITHUB_USER
  token = $GITHUB_TOKEN
  
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = true
  pager = true
 
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
 
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
  whitespace = white reverse        
 
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
  
[core]
  pager = less -FRSX
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
  editor = vim
   
[alias] 
  b = branch -v
  r = remote -v
  t = tag -l  
  st = status
  ci = commit
  br = branch
  co = checkout
  df = diff
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
  who = shortlog -n -s --no-merges
  revertall = checkout .
  unstage = reset HEAD
  uncommit = reset --soft HEAD^
  up = !git fetch origin && git rebase origin/master
  rmb = !sh -c 'git branch -D $1 && git push origin :$1' - #remove lokal an remote branch 
  cleanup = !git remote prune origin && git gc && git clean -dfx && git stash clear
  nb = !git push origin master:refs/heads/$1 && git fetch origin && git branch --track $1 origin/$1 && git checkout $1 
  
[merge]
  tool = chdiff
  summary = true
    
[mergetool "chdiff"]
  cmd = /usr/bin/chdiff --wait "$LOCAL" "$REMOTE"
  keepBackup = false
  trustExitCode = false
 
[difftool]
  prompt = false
  
[gc]
  auto=1 #Automatic cleanup and compression of the repo  
 
[apply]
	whitespace = nowarn
[browser "gitscm"]
	cmd = /bin/sh -c 'open http://git-scm.com/docs/$(basename $1 .html)' --
[help]
	browser = gitscm

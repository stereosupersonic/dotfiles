[color]
        diff = auto
        status = auto
        branch = auto
        interactive = auto
        ui = true
        pager = true

[color "branch"]
        current = yellow reverse
        local = yellow
        remote = green

[color "diff"]
        meta = yellow bold
        frag = magenta bold
        old = green bold
        new = red bold
        whitespace = blue reverse
        

[color "status"]
        added = yellow
        changed = green
        untracked = cyan

[core]
        pager = less -FRSX
        whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
	      editor = mate -w

[alias] 
     st = status
     ci = commit
     co = checkout
     w = whatchanged
     df = diff
     lg = log -p

[merge]
    tool = chdiff
[mergetool "chdiff"]
    cmd = /usr/bin/chdiff --wait "$LOCAL" "$REMOTE"
    keepBackup = false
    trustExitCode = false

[difftool]
	prompt = false

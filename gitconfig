  token = github API token
  
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = true
  pager = true

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = green bold
  new = red bold
  whitespace = blue reverse        

[color "status"]
  added = yellow
  changed = green
  untracked = cyan
  
[core]
  pager = less -FRSX
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
  editor = vim
   
[alias] 
  b = branch -v
  r = remote -v
  t = tag -l  
  st = status
  ci = commit
  br = branch
  co = checkout
  df = diff
  lg = log -p
  who = shortlog -s --
  revertall = checkout .
  unstage = reset HEAD
  uncommit = reset --soft HEAD^
   
[merge]
  tool = chdiff
  summary = true
    
[mergetool "chdiff"]
  cmd = /usr/bin/chdiff --wait "$LOCAL" "$REMOTE"
  keepBackup = false
  trustExitCode = false

[difftool]
  prompt = false
  
[gc]
  auto=1 #Automatic cleanup and compression of the repo  

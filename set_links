#!/usr/bin/env sh

if [ -f DOTFILE ]; then
  echo "DOTFILE exits" 
else
  echo "DOTFILE not exits"  
  echo "exec: rake install"  
  exit
fi

source DOTFILE  
echo $DOTFILE
mv $HOME/.bashrc $HOME/.bashrc.bak
mv $HOME/.bash_profile $HOME/.bash_profile.bak
mv $HOME/.gitconfig $HOME/.gitconfig.bak

ln -nfs $DOTFILE/DOTFILE $HOME/.DOTFILE   
ln -nfs $DOTFILE/bashrc $HOME/.bash_profile
ln -nfs $DOTFILE/bashrc $HOME/.bashrc
ln -nfs $DOTFILE/gitconfig $HOME/.gitconfig

#ruby-rails
mv $HOME/.irbrc $HOME/.irbrc.bak
mv $HOME/.railsconsolerc $HOME/.railsconsolerc.bak
mv $HOME/.railsrc $HOME/.railsrc.bak
mv $HOME/.autotest $HOME/.railsrc.bak
mv $HOME/.rdebugrc  $HOME/.rdebugrc.bak
mv $HOME/.tmux.conf  $HOME/.tmux_conf.bak

ln -nfs $DOTFILE/irbrc $HOME/.irbrc
ln -nfs $DOTFILE/railsrc $HOME/.railsrc
ln -nfs $DOTFILE/railsconsolerc $HOME/.railsconsolerc
ln -nfs $DOTFILE/autotest $HOME/.autotest
ln -nfs $DOTFILE/rdebugrc $HOME/.rdebugrc
ln -nfs $DOTFILE/tmuxconf $HOME/.tmux.conf

#Install vim
mv $HOME/.vimrc $HOME/.vimrc.bak
mv $HOME/.gvimrc $HOME/.gvimrc.bak
mv $HOME/.vim $HOME/.vim.bak

ln -nfs $DOTFILE/vim/vimrc $HOME/.vimrc
ln -nfs $DOTFILE/vim/gvimrc $HOME/.gvimrc
ln -nfs $DOTFILE/vim/dot_vim $HOME/.vim   

echo "fertig set_links" 
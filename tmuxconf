#~/.tmux.conf

# act like vim
#Ctrl+a c # create a new window
#Ctrl+a , # name the window (test, vim, console, log, etc.)
#Ctrl+a v # split pane horizontally
#Ctrl+a s # split pane vertically
#Ctrl+a j (or k) # move up or down a pane
#Ctrl+a h (or l) # move left or right a pane
#Ctrl+a x # kill a pane or window

setw -g mode-keys vi



bind-key -r C-h select-window -t :-
bind-key -r C-l select-window -t :+

# act like GNU screen
#Rebinding the Action Key
unbind C-b
set -g prefix C-a

# look good
set -g default-terminal "screen-256color"
# Set status bar
set -g status-bg black
set -g status-fg white
set -g status-left '#[fg=green]#H'
# Highlight active window
set-window-option -g window-status-current-bg red
set -g status-right '#[fg=yellow]#(uptime | cut -d "," -f 2-)'

bind h select-pane -L
bind j select-pane -D
bind k select-pane -U
bind l select-pane -R

unbind %
# use "v" and "s" to do vertical/horizontal splits, like vim
bind s split-window -v
bind v split-window -h

